generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  username  String     @id
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  role      Role       @relation(fields: [roleId], references: [id])
  roleId    Int
  Listener  Listener[]
  Artist    Artist[]
}

model Role {
  id   Int    @id @default(autoincrement())
  role String
  User User[]
}

model Listener {
  user     User   @relation(fields: [username], references: [username])
  username String @id
  image    String
}

model Artist {
  user       User    @relation(fields: [username], references: [username])
  username   String  @id
  artistName String
  image      String
  bio        String
  Album      Album[]
}

model Album {
  id             String   @id
  artist         Artist   @relation(fields: [artistUsername], references: [username])
  artistUsername String
  title          String
  genre          String
  createdAt      DateTime @default(now())
  Song           Song[]
}

model Song {
  id       String @id
  album    Album  @relation(fields: [albumId], references: [id])
  albumId  String
  title    String
  duration Int
}
